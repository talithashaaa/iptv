<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".OrderFood">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="513dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1"
        />

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:fontFamily="@font/poppins_600"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical4"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ms. Litha"
        android:fontFamily="@font/poppins_600"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text_hello"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical4"
        />

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_600"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintRight_toLeftOf="@id/guideline_vertical3"
        />
    <TextView
        android:id="@+id/text_date"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:fontFamily="@font/poppins_600"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text_day"
        app:layout_constraintRight_toLeftOf="@id/guideline_vertical3"
        />

    <TextClock
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:fontFamily="@font/poppins_600"
        android:textSize="70sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical3"
        />

    <RelativeLayout
        android:layout_width="860dp"
        android:layout_height="380dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal2"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myImageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg_gradient"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"/>

        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_600"
            android:text="Food Service"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="250dp"
            android:layout_below="@+id/helloTextView"
            android:fontFamily="@font/poppins_400"
            android:text="Indulge in the convenience of ordering delicious meals right from the comfort of your room using the hotel TV, ensuring a delightful dining experience delivered to your doorstep."
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/helloTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/desc"
            android:fontFamily="@font/poppins_400"
            android:text="Today Offer"
            android:textColor="#000000"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/helloTextView2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/restaurant2"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/salmon"/>

                    <TextView
                        android:id="@+id/salmon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/restaurant2"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_600"
                        android:text="Salmon Mentai"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/salmon2"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/poppins_400"
                        android:text="Mastering the Art: Serving Tenderloin Steak with Elegance and Flavor"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/desc3"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/poppins_600"
                        android:text="$19.00"
                        android:textColor="#efb442"
                        android:textSize="14sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient2">

            <TextView
                android:id="@+id/select_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_600"
                android:layout_centerVertical="true"

                android:text="Tenderloin Steak"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

                android:id="@+id/elegantNumberButton"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/select_text"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                app:backGroundColor="#3B5CD3"
                app:textSize="14sp"
                app:textColor="@android:color/white"
                app:initialNumber="0" />

            <Button
                android:id="@+id/welcomeButton"
                android:layout_marginTop="10dp"
                android:layout_width="160dp"
                android:layout_height="41dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/elegantNumberButton"
                android:fontFamily="@font/poppins_600"
                android:background="@drawable/button_background"
                android:text="Add To Cart"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/drawablebed"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/baseline_shopping_cart_24"
                />

        </RelativeLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>