<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".RoomServiceDetail">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="513dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1"
        />

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:fontFamily="@font/poppins_600"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical4"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ms. Litha"
        android:fontFamily="@font/poppins_600"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text_hello"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical4"
        />

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:fontFamily="@font/poppins_600"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical2"
        />
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31 September 2024"
        android:fontFamily="@font/poppins_600"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text_day"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical2"
        />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:59"
        android:fontFamily="@font/poppins_600"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical3"
        />

    <RelativeLayout
        android:layout_width="860dp"
        android:layout_height="340dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal2"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            />
        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_400"
            android:text="Please take as needed, and don't forget to add notes if necessary."
            android:textColor="#3B5CD3"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="28dp"
            android:padding="10dp"
            android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/towel" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Towel"
                android:textColor="#3B5CD3"
                android:fontFamily="@font/poppins_600"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textColor="#B3B4B6"
                android:text="Add Notes"
                android:visibility="visible"
                android:fontFamily="@font/poppins_600"
                android:textSize="15sp"
                tools:visibility="visible"
                android:background="@null" />
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

                android:id="@+id/elegantNumberButton"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:backGroundColor="#3B5CD3"
                app:textSize="4sp"
                app:textColor="@android:color/white"
                app:initialNumber="0" />

        </LinearLayout>

        <Button
            android:id="@+id/welcomeButton"
            android:layout_marginTop="300dp"
            android:layout_width="93dp"
            android:layout_height="27dp"
            android:layout_marginLeft="30dp"

            android:fontFamily="@font/poppins_600"
            android:background="@drawable/button_background"
            android:radius="10dp"
            android:text="Send Request"
            android:textSize="8sp"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>