<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".OrderFoodPayment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="513dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1"
        />

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:fontFamily="@font/poppins_600"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical4"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ms. Litha"
        android:fontFamily="@font/poppins_600"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text_hello"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical4"
        />

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:fontFamily="@font/poppins_600"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical2"
        />
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31 September 2024"
        android:fontFamily="@font/poppins_600"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text_day"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical2"
        />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:59"
        android:fontFamily="@font/poppins_600"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical3"
        />

    <RelativeLayout
        android:layout_width="860dp"
        android:layout_height="340dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal2"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            />

        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_600"
            android:text="Your Order"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="250dp"
            android:layout_below="@+id/helloTextView"
            android:fontFamily="@font/poppins_400"
            android:text="Please double-check your order and don't forget to choose your preferred payment method."
            android:textColor="#000000"
            android:textSize="12sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/desc"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="120dp"
                        android:layout_height="77dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/restaurant4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/salmon" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/salmon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cardView"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_600"
                        android:text="Salmon Mentai"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/drawablebed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@id/elegantNumberButton"
                        android:layout_centerVertical="true"
                        android:background="@drawable/trash"
                        />

                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

                        android:id="@+id/elegantNumberButton"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        app:backGroundColor="#3B5CD3"
                        app:textSize="5sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:textColor="@android:color/white"
                        app:initialNumber="0" />



                    <TextView
                        android:id="@+id/desc5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cardView"
                        android:layout_below="@id/salmon4"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/poppins_400"
                        android:text="Mastering the Art: Serving Tenderloin Steak with Elegance and Flavor"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cardView"
                        android:layout_below="@+id/desc5"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/poppins_600"
                        android:text="$19.00"
                        android:textColor="#efb442"
                        android:textSize="20sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/helloTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/listview"
            android:fontFamily="@font/poppins_600"
            android:text="Need anything else?"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="250dp"
            android:layout_below="@+id/helloTextView1"
            android:fontFamily="@font/poppins_400"
            android:text="Add other dishes, if you want."
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/welcomeButton"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/listview"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:fontFamily="@font/poppins_600"
            android:background="@drawable/button_background2"
            android:text="Add More"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:textColor="#3b5cd3" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg">

            <Button
                android:id="@+id/welcomeButton2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="160dp"
                android:layout_height="38dp"
                android:fontFamily="@font/poppins_600"
                android:background="@drawable/button_background2"
                android:text="Order"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"
                android:textColor="#3b5cd3" />

            <View
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/welcomeButton2"
                />

            <View
                android:id="@+id/wallet"
                android:layout_width="38dp"
                android:layout_marginLeft="20dp"
                android:layout_height="38dp"
                android:background="@drawable/wallet"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/total"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="250dp"
                android:layout_toRightOf="@+id/wallet"
                android:fontFamily="@font/poppins_400"
                android:text="Total Payment"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/total1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="250dp"
                android:layout_below="@+id/total"
                android:layout_toRightOf="@+id/wallet"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_600"
                android:text="$57.00"
                android:textColor="#ffffff"
                android:textSize="15sp" />



        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>